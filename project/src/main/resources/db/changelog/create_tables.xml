<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="1" author="chatgpt">
        <createTable tableName="users">
            <column name="user_id" type="INT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="chatgpt">
        <createTable tableName="training_plans">
            <column name="plan_id" type="INT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="plan_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3" author="chatgpt">
        <addForeignKeyConstraint baseTableName="training_plans"
                                 baseColumnNames="user_id"
                                 referencedTableName="users"
                                 referencedColumnNames="user_id"
                                 constraintName="fk_training_plans_user"/>
    </changeSet>

    <changeSet id="4" author="chatgpt">
        <createTable tableName="exercises_library">
            <column name="exercise_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="exercise_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="5" author="chatgpt">
        <createTable tableName="plan_details">
            <column name="detail_id" type="INT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="plan_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="exercise_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="sets" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="repetitions" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="tempo" type="VARCHAR(255)"/>
            <column name="rest_time" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="6" author="chatgpt">
        <addForeignKeyConstraint baseTableName="plan_details"
                                 baseColumnNames="plan_id"
                                 referencedTableName="training_plans"
                                 referencedColumnNames="plan_id"
                                 constraintName="fk_plan_details_plan"/>
    </changeSet>

    <changeSet id="7" author="chatgpt">
        <createTable tableName="training_sessions">
            <column name="session_id" type="INT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="plan_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="session_date" type="DATE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="8" author="chatgpt">
        <addForeignKeyConstraint baseTableName="training_sessions"
                                 baseColumnNames="user_id"
                                 referencedTableName="users"
                                 referencedColumnNames="user_id"
                                 constraintName="fk_sessions_user"/>

        <addForeignKeyConstraint baseTableName="training_sessions"
                                 baseColumnNames="plan_id"
                                 referencedTableName="training_plans"
                                 referencedColumnNames="plan_id"
                                 constraintName="fk_sessions_plan"/>
    </changeSet>

    <changeSet id="9" author="chatgpt">
        <createTable tableName="session_exercises">
            <column name="session_exercise_id" type="INT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="session_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="detail_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="series" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="weight" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="repetitions_completed" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="tempo_used" type="VARCHAR(255)"/>
            <column name="rest_time_used" type="VARCHAR(255)"/>
            <column name="exercise_notes" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="10" author="chatgpt">
        <addForeignKeyConstraint baseTableName="session_exercises"
                                 baseColumnNames="session_id"
                                 referencedTableName="training_sessions"
                                 referencedColumnNames="session_id"
                                 constraintName="fk_session_exercises_session"/>

        <addForeignKeyConstraint baseTableName="session_exercises"
                                 baseColumnNames="detail_id"
                                 referencedTableName="plan_details"
                                 referencedColumnNames="detail_id"
                                 constraintName="fk_session_exercises_detail"/>
    </changeSet>

</databaseChangeLog>
